{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["ES2016","ES2018","ES2019","ES2020","ES2022"],
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
        "baseUrl": "src",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": false
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "log"],
    "ts-node":{
        "transpileOnly": true
    }
}